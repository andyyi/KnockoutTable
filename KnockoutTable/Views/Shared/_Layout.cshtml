<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="navbar-default">
            <nav id="bs-navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav ">
                    <li>
                        <a class="selected" href="/Home" title="Home">Home</a>
                        <ul class="clearfix" style="display: none;">
                            <li><a href="/Home/Dashboard " title="Home">Home</a></li>
                            <li><a href="/Home/News " title="News">News</a></li>
                            <li><a href="/Home/Newslist " title="News List">News List</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        <div class="knockout-table-body">
            @RenderBody()
        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
